// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Store {
  ownerId  String     @unique
  storeId  String     @id @unique
  name     String
  Product  Product[]
  Order    Order[]
  Customer Customer[]
}

model Product {
  id      String  @id @unique
  name    String
  price   Float
  storeId String
  store   Store   @relation(fields: [storeId], references: [storeId])
  Order   Order[]

  @@index([storeId])
}

model Order {
  id        String  @id @unique
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  storeId   String
  store     Store   @relation(fields: [storeId], references: [storeId])

  @@index([productId])
  @@index([storeId])
}

model Customer {
  id      String @id @unique
  name    String
  email   String
  phone   String
  address String
  storeId String
  store   Store  @relation(fields: [storeId], references: [storeId])

  @@index([storeId])
}
